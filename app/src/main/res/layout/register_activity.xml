<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:padding="25dp"
    android:orientation="vertical"
    tools:context=".Register">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lrnt_logo"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="REGISTER"
        android:fontFamily="@font/jakarta_sans_bold"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/fullnametxt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:fontFamily="@font/jakarta_sans"
        android:textSize="15dp"
        android:textColor="@color/white"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/ET_name"
        android:fontFamily="@font/jakarta_sans"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_shape"
        />
    <TextView
        android:id="@+id/emailtxt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:fontFamily="@font/jakarta_sans"
        android:textSize="15dp"
        android:textColor="@color/white"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/ET_email"
        android:fontFamily="@font/jakarta_sans"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_shape"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:fontFamily="@font/jakarta_sans"
        android:textColor="@color/white"
        android:textSize="15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/ET_password"
        android:fontFamily="@font/jakarta_sans"
        android:background="@drawable/edit_text_shape"
        android:layout_marginBottom="40dp"
        />

    <Button
        android:id="@+id/Btn_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Base.Theme.LRNT"
        android:text="Register"
        android:fontFamily="@font/jakarta_sans_bold"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/primary_color"
        android:backgroundTint="@color/second_color2"
        android:background="@drawable/button_second"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account ?"
            android:fontFamily="@font/jakarta_sans"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/loginPage_registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login now"
            android:fontFamily="@font/jakarta_sans_bold"
            android:textColor="@color/white"
            android:textStyle="bold"
            style="@style/Base.Theme.LRNT"
            android:background="@drawable/button_second"
            android:backgroundTint="@color/primary_color"
            android:shadowColor="@color/primary_color"
            android:outlineAmbientShadowColor="@color/primary_color"
            android:layout_marginLeft="2dp"/>

    </LinearLayout>

</LinearLayout>