<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Profile"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginVertical="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#191919"/>
        <ImageView
            android:id="@+id/Foto_profile_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_profile"
            android:padding="80dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Samantha Lim"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#191919"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:paddingHorizontal="10dp"
                android:text="Email"
                android:textSize="12dp"
                android:clickable="false"/>

            <TextView
                android:id="@+id/Email_profile_id"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="start|center"
                android:layout_marginHorizontal="20dp"
                android:paddingHorizontal="10dp"
                android:text="Email@example.com"
                android:textSize="17dp"
                android:background="@color/primary_color"
                android:textColor="@color/white"
                android:clickable="false"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:text="Phone Number"
                android:textSize="12dp"
                android:paddingHorizontal="10dp"
                android:clickable="false"/>

            <TextView
                android:id="@+id/noHP_profile_id"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="start|center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:paddingHorizontal="10dp"
                android:text="082347584950"
                android:textSize="17dp"
                android:background="@color/primary_color"
                android:textColor="@color/white"
                android:clickable="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Date of Birth"
                android:textSize="12dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/BirthDate_profile_DD_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_color"
                    android:inputType="phone"
                    android:maxLength="2"
                    android:paddingHorizontal="10dp"
                    android:text="08"
                    android:textSize="17dp"
                    android:clickable="false"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/BirthDate_profile_MM_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:background="@color/primary_color"
                    android:inputType="phone"
                    android:maxLength="2"
                    android:paddingHorizontal="10dp"
                    android:text="02"
                    android:textSize="17dp"
                    android:clickable="false"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/BirthDate_profile_YYYY_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_color"
                    android:paddingHorizontal="10dp"
                    android:text="2022"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:clickable="false"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>




</LinearLayout>