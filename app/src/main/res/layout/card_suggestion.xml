<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#386A86"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:id="@+id/CardSuggestion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/SuggestionLogo"
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:background="@drawable/c_programming_language"/>

        <TextView
            android:id="@+id/SuggestionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introduction To C"
            android:textSize="15dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="35dp"
            android:fontFamily="@font/jakarta_sans_bold"
            android:textColor="#E7D1B9" />

    </LinearLayout>

</androidx.cardview.widget.CardView>