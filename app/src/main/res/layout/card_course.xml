<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#386A86"
    app:cardCornerRadius="35dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="8dp"
    android:id="@+id/CardCourse">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/CourseLogo"
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/CourseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduction To C"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/jakarta_sans_bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- content"
                android:textColor="@color/white"
                android:fontFamily="@font/jakarta_sans"/>

        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/carbon_next_outline"
        android:layout_gravity="end"
        android:layout_marginTop="30dp"
        />

</androidx.cardview.widget.CardView>