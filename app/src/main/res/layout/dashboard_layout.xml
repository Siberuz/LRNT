<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    android:orientation="vertical"
    android:gravity="top|center">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logofull_lrnt"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#386A86"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Average Score"
                    android:textSize="15dp"
                    android:fontFamily="@font/jakarta_sans_bold"
                    android:textColor="#E7D1B9"/>

                <TextView
                    android:id="@+id/ProfileScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="76.7 pts"
                    android:textSize="40dp"
                    android:layout_marginTop="-15dp"
                    android:fontFamily="@font/jakarta_sans_bold"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Profile"
                    android:textSize="15dp"
                    android:fontFamily="@font/jakarta_sans_bold"
                    android:textColor="#E7D1B9"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ProfilePicture"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/ic_launcher_background"
                            android:foreground="@mipmap/ic_launcher"
                            android:layout_margin="10dp"/>

                        <TextView
                            android:id="@+id/ProfileName"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Samantha Lim"
                            android:fontFamily="@font/jakarta_sans"
                            android:gravity="center"
                            android:textColor="@color/black"/>

                        <Button
                            android:id="@+id/ProfileButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="LogOut"
                            android:textAlignment="textEnd"
                            android:textColor="#DD684B"
                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/jakarta_sans_bold"
                            android:background="#00FFFFFF"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/jakarta_sans_bold"
            android:text="Course of The Day"
            android:textColor="#191919"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/CardSuggestion_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                app:cardBackgroundColor="#386A86"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/SuggestionLogo"
                        android:layout_width="92dp"
                        android:layout_height="101dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/c_programming_language" />

                    <TextView
                        android:id="@+id/SuggestionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jakarta_sans_bold"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="35dp"
                        android:text="Introduction To C"
                        android:textColor="#E7D1B9"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/CardSuggestion_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#386A86"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/SuggestionLogo_2"
                        android:layout_width="92dp"
                        android:layout_height="101dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/c_programming_language" />

                    <TextView
                        android:id="@+id/SuggestionTitle_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jakarta_sans_bold"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="35dp"
                        android:text="Introduction To C"
                        android:textColor="#E7D1B9"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
